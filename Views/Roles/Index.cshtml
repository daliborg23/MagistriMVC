@{
	ViewData["Title"] = "Roles";
}
@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityRole>
<h4>All Roles</h4>
<table>
	<tr>
		<th>Name</th>
		<th>ID</th>
		<th></th>
	</tr>
	@foreach (var role in Model) {
		<tr>
			<td>@role.Name</td>
			<td>@role.Id</td>
			<td>
				<a class="btn btn-outline-secondary btn-sm" asp-controller="Roles" asp-action="Edit" asp-route-id="@role.Id">Edit</a>
				<a class="btn btn-secondary btn-sm" asp-controller="Roles" asp-action="Delete" asp-route-id="@role.Id">Delete</a>
			</td>
			@*<td><a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@role.Id">Update</a></td>
			<td>
				<form asp-action="Delete" asp-route-id="@role.Id" method="post">
					<button type="submit" class="btn btn-sm btn-danger">
						Delete
					</button>
				</form>
			</td>*@
		</tr>
	}
</table>
<hr />
<a asp-action="Create" class="btn btn-sm btn-success">Create a Role</a>
