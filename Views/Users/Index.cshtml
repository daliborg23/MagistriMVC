@model IEnumerable<AppUser>
@{
    ViewData["Title"] = "READ USER";
}
<h4>All Users</h4>
@*tlačítko pro vytvoření nového uživatele*@
@*tabulka bude mít vyznačené okraje*@
<table>
    @*definice prvního řádku tabulky s nadpisy sloupců (budou tučně)*@
    @*<tr> = table row*@
    <tr>
        @*<th> = table header*@
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th></th>
    </tr>
    @*rozdělení vlastností uživatele do jednotlivých buněk tabulky - držíme se schématu z table headeru - id, name,
    email, tlačítka pro update a delete*@
    @foreach (AppUser user in Model) {
        <tr>
            <td>@user.Id</td> @*<td> = table data*@
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>
                <a class="btn btn-outline-secondary btn-sm" asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                <a class="btn btn-secondary btn-sm" asp-controller="Users" asp-action="Delete" asp-route-id="@user.Id">Delete</a>
            </td>
            @*<td>
                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id"> Update</a>
            </td>
            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>*@
        </tr>
    }
</table>
<hr />
<a asp-action="Create" class="btn btn-sm btn-success">Create a User</a>

