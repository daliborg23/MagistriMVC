<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - MagistriMVC</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/MagistriMVC.styles.css" asp-append-version="true" />
	@*<script src="https://www.google.com/recaptcha/api.js" async defer></script>*@
</head>
<body data-bs-theme="dark">
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3 text-dark">
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MagistriMVC</a>
				<button class="navbar-toggler bg-dark" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1 text-light">
						<li class="nav-item">
							<a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
						</li>
						@*<li class="nav-item">
						<a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
						</li>*@
						@if (User.IsInRole("Admin") || User.IsInRole("Director") || User.IsInRole("Teacher") || User.IsInRole("Parent") || User.IsInRole("Student")) {
						<li class="nav-item">
							<a class="nav-link" asp-area="" asp-controller="Grades" asp-action="Index">Grades</a>
						</li>
						}
						@if (User.IsInRole("Admin") || User.IsInRole("Director") || User.IsInRole("Teacher")){
							<li class="nav-item">
								<a class="nav-link" asp-area="" asp-controller="Students" asp-action="Index">Students</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" asp-area="" asp-controller="Subjects" asp-action="Index">Subjects</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" asp-area="" asp-controller="Users" asp-action="Index">Users</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" asp-area="" asp-controller="Roles" asp-action="Index">Roles</a>
							</li>
						}
					</ul>
					<partial name="_LoginPartial" />
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2023 - MagistriMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	@*<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>*@
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
